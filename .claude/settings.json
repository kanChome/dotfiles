{
  "permissions": {
    "allow": [
      "Bash(pnpm test)", // pnpm testを常に許可
      "Bash(gh pr view:*)", // gh pr view　系を常に許可
    ],
    "deny": [
      "Bash(git commit:*)", // git commitをブロック
      "Bash(git push:*)", // git pushをブロック
      "Bash(rm:*)", // 予期せぬファイル削除を防ぐ
      "Bash(sudo:*)", // sudo系コマンドをブロック
      "Read(.env.*)", // 環境変数の読み込みを防ぐ
    ]
  }

}
